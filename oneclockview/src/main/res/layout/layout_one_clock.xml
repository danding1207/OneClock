<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/cardview_dark_background"
>


    <RelativeLayout
            android:elevation="10dp"
            android:layout_width="100dp"
            android:layout_height="49dp"
            android:background="@drawable/bg_shape_top"
            android:id="@+id/hour_top"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                tools:text="14"
                android:textColor="#FFFFFF"
                android:textSize="74dp"
                android:layout_marginTop="0dp"
                android:gravity="top"
                android:id="@+id/tv_hour_top"/>

    </RelativeLayout>


    <RelativeLayout
            android:elevation="10dp"
            android:layout_marginTop="2dp"
            android:layout_width="100dp"
            android:layout_height="49dp"
            android:background="@drawable/bg_shape_bottom"
            android:id="@+id/hour_bottom"
            app:layout_constraintTop_toBottomOf="@+id/hour_top" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
    >


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                tools:text="14"
                android:textColor="#FFFFFF"
                android:textSize="74dp"
                android:layout_marginBottom="0dp"
                android:gravity="bottom"
                android:id="@+id/tv_hour_bottom"/>


        <TextView
                tools:text="PM"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/tv_pm"
                android:textSize="8sp"
                android:layout_margin="4dp"
        />


    </RelativeLayout>


    <RelativeLayout
            android:elevation="10dp"
            android:layout_width="100dp"
            android:layout_height="49dp"
            android:visibility="invisible"
            android:background="@drawable/bg_shape_top"
            android:id="@+id/hour_top_b"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
    >


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                tools:text="14"
                android:textColor="#FFFFFF"
                android:textSize="74dp"
                android:layout_marginTop="0dp"
                android:gravity="top"
                android:id="@+id/tv_hour_top_b"/>

    </RelativeLayout>

    <RelativeLayout
            android:elevation="10dp"
            android:layout_marginTop="2dp"
            android:layout_width="100dp"
            android:layout_height="49dp"
            android:visibility="invisible"
            android:background="@drawable/bg_shape_bottom"
            android:id="@+id/hour_bottom_c"
            app:layout_constraintTop_toBottomOf="@+id/hour_top" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
    >


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                tools:text="14"
                android:textColor="#FFFFFF"
                android:textSize="74dp"
                android:layout_marginBottom="0dp"
                android:gravity="bottom"
                android:id="@+id/tv_hour_bottom_c"/>


        <TextView
                tools:text="PM"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/tv_pm_c"
                android:textSize="8sp"
                android:layout_margin="4dp"
        />

    </RelativeLayout>


    <RelativeLayout
            android:elevation="10dp"
            android:layout_width="100dp"
            android:layout_height="49dp"
            android:background="@drawable/bg_shape_top"
            android:id="@+id/min_top"
            android:visibility="visible"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/hour_bottom_c"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                tools:text="59"
                android:textColor="#FFFFFF"
                android:textSize="74dp"
                android:layout_marginTop="0dp"
                android:gravity="top"
                android:id="@+id/tv_min_top"/>

    </RelativeLayout>

    <RelativeLayout
            android:elevation="10dp"
            android:layout_marginTop="2dp"
            android:layout_width="100dp"
            android:layout_height="49dp"
            android:visibility="visible"
            android:background="@drawable/bg_shape_bottom"
            android:id="@+id/min_bottom"
            app:layout_constraintTop_toBottomOf="@+id/min_top" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                tools:text="59"
                android:textColor="#FFFFFF"
                android:textSize="74dp"
                android:layout_marginBottom="0dp"
                android:gravity="bottom"
                android:id="@+id/tv_min_bottom"/>

    </RelativeLayout>


    <RelativeLayout
            android:elevation="10dp"
            android:layout_width="100dp"
            android:layout_height="49dp"
            android:visibility="invisible"
            android:background="@drawable/bg_shape_top"
            android:id="@+id/min_top_b"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/hour_bottom_c"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                tools:text="59"
                android:textColor="#FFFFFF"
                android:textSize="74dp"
                android:layout_marginTop="0dp"
                android:gravity="top"
                android:id="@+id/tv_min_top_b"/>

    </RelativeLayout>

    <RelativeLayout
            android:elevation="10dp"
            android:layout_marginTop="2dp"
            android:layout_width="100dp"
            android:layout_height="49dp"
            android:visibility="invisible"
            android:background="@drawable/bg_shape_bottom"
            android:id="@+id/min_bottom_c"
            app:layout_constraintTop_toBottomOf="@+id/min_top" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
    >


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                tools:text="59"
                android:textColor="#FFFFFF"
                android:textSize="74dp"
                android:layout_marginBottom="0dp"
                android:gravity="bottom"
                android:id="@+id/tv_min_bottom_c"/>

    </RelativeLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            tools:text="48"
            android:textColor="#FFFFFF"
            android:textSize="24dp"
            android:gravity="bottom"
            android:layout_gravity="right"
            android:layout_margin="4dp"
            android:id="@+id/tv_second"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/min_bottom_c"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>


</android.support.constraint.ConstraintLayout>
